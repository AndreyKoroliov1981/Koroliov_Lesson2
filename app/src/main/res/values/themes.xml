<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeWork2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DefaultAnalogClockFieldStyle">
        <item name="hourHandColor">#d5dbdc</item>
        <item name="minuteHandColor">#d5dbdc</item>
        <item name="secondHandColor">#ffffff</item>
        <item name="hourHandSize">0.40</item>
        <item name="minuteHandSize">0.55</item>
        <item name="secondHandSize">0.70</item>
        <item name="colorDigit">#ffffff</item>
        <item name="colorBackground">#3e5c75</item>
    </style>

</resources>