<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:columnCount="3"
    android:background="@color/grey"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/ivFlagOfAustria"
        android:layout_width="@dimen/image_in_dp"
        android:layout_height="@dimen/image_in_dp"
        android:padding="2dp"
        app:srcCompat="@drawable/flag_of_austria" />
    <ImageView
        android:id="@+id/ivFlagOfPoland"
        android:scaleType="centerInside"
        android:layout_width="@dimen/image_in_dp"
        android:layout_height="@dimen/image_in_dp"
        android:padding="2dp"
        app:srcCompat="@drawable/flag_of_poland" />
    <ImageView
        android:id="@+id/ivFlagOfItaly"
        android:scaleType="centerInside"
        android:layout_width="@dimen/image_in_dp"
        android:layout_height="@dimen/image_in_dp"
        android:padding="2dp"
        app:srcCompat="@drawable/flag_of_italy" />

    <ImageView
        android:id="@+id/ivFlagOfColombia"
        android:scaleType="centerInside"
        android:layout_width="@dimen/image_in_dp"
        android:layout_height="@dimen/image_in_dp"
        android:padding="2dp"
        app:srcCompat="@drawable/flag_of_colombia" />
    <ImageView
        android:id="@+id/ivFlagOfRussia"
        android:layout_width="@dimen/image_in_dp"
        android:layout_height="@dimen/image_in_dp"
        android:padding="2dp"
        app:srcCompat="@drawable/flag_of_russia" />
    <ImageView
        android:id="@+id/ivFlagOfMadagascar"
        android:layout_width="@dimen/image_in_dp"
        android:layout_height="@dimen/image_in_dp"
        android:padding="2dp"
        app:srcCompat="@drawable/flag_of_madagascar" />

    <ImageView
        android:id="@+id/ivFlagOfThailand"
        android:layout_width="@dimen/image_in_dp"
        android:layout_height="@dimen/image_in_dp"
        android:scaleType="centerInside"
        android:padding="2dp"
        app:srcCompat="@drawable/flag_of_thailand" />
    <ImageView
        android:id="@+id/ivFlagOfDenmark"
        android:layout_width="@dimen/image_in_dp"
        android:layout_height="@dimen/image_in_dp"
        android:scaleType="centerInside"
        android:padding="2dp"
        app:srcCompat="@drawable/flag_of_denmark" />
    <ImageView
        android:id="@+id/ivFlagOfSwitzerland"
        android:layout_width="@dimen/image_in_dp"
        android:layout_height="@dimen/image_in_dp"
        android:scaleType="centerInside"
        android:padding="2dp"
        app:srcCompat="@drawable/flag_of_switzerland" />
</GridLayout>