<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".LinearActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFlagOfAustria"
            android:layout_width="@dimen/image_in_dp"
            android:layout_height="@dimen/image_in_dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/flag_of_austria" />

        <ImageView
            android:id="@+id/ivFlagOfPoland"
            android:layout_width="@dimen/image_in_dp"
            android:layout_height="@dimen/image_in_dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/flag_of_poland" />

        <ImageView
            android:id="@+id/ivFlagOfItaly"
            android:layout_width="@dimen/image_in_dp"
            android:layout_height="@dimen/image_in_dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/flag_of_italy" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFlagOfColombia"
            android:layout_gravity="start|center"
            android:layout_width="@dimen/image_in_dp"
            android:layout_height="@dimen/image_in_dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/flag_of_colombia" />
        <ImageView
            android:id="@+id/ivFlagOfRussia"
            android:layout_gravity="center"
            android:layout_width="@dimen/image_in_dp"
            android:layout_height="@dimen/image_in_dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/flag_of_russia" />
        <ImageView
            android:id="@+id/ivFlagOfMadagascar"
            android:layout_gravity="end|center"
            android:layout_width="@dimen/image_in_dp"
            android:layout_height="@dimen/image_in_dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/flag_of_madagascar" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFlagOfThailand"
            android:layout_gravity="start|bottom"
            android:layout_width="@dimen/image_in_dp"
            android:layout_height="@dimen/image_in_dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/flag_of_thailand" />
        <ImageView
            android:id="@+id/ivFlagOfDenmark"
            android:layout_gravity="center|bottom"
            android:layout_width="@dimen/image_in_dp"
            android:layout_height="@dimen/image_in_dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/flag_of_denmark" />
        <ImageView
            android:id="@+id/ivFlagOfSwitzerland"
            android:layout_gravity="end|bottom"
            android:layout_width="@dimen/image_in_dp"
            android:layout_height="@dimen/image_in_dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/flag_of_switzerland" />
    </LinearLayout>



</LinearLayout>